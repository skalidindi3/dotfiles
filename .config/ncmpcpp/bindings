# vim-like search bindings
# {{{
def_key "/"
    find_item_forward
def_key "n"
    next_found_item
def_key "N"
    previous_found_item
# }}}

# playback
# {{{
def_key "space"
    pause
    run_external_command "tmux refresh-client -S" # force update tmux statusbar
def_key "s"
    stop
    run_external_command "tmux refresh-client -S" # force update tmux statusbar
def_key "<"
    previous
def_key ">"
    next
def_key "="
    volume_up
def_key "+"
    volume_up
def_key "-"
    volume_down
def_key "_"
    volume_down
def_key "ctrl-v"
    set_volume
def_key "right"
    seek_forward
def_key "left"
    seek_backward
def_key "tab"
    toggle_visualization_type
# }}}

# main playlist settings
# {{{
def_key "c"
    require_screen "playlist"
    clear_main_playlist
def_key "d"
    require_screen "playlist"
    delete_playlist_items
def_key "3"
    require_screen "playlist"
    jump_to_playing_song
def_key "S"
    require_screen "playlist"
    save_playlist
def_key "ctrl-c"
    require_screen "playlist"
    toggle_consume
def_key "delete"
    require_screen "playlist"
    delete_playlist_items
# }}}

# search engine settings
# {{{
def_key "/"
    require_screen "search_engine"
    run_action
def_key "enter"
    require_screen "search_engine"
    start_searching
def_key "r"
    require_screen "search_engine"
    reset_search_engine
# }}}

# re-establish defaults on other panes where necessary
# NOTE: this is for keys mapped with require_screen
# {{{
def_key "enter" # for adding selected items to playlist
    run_action
def_key "enter" # selecting audio_output
    toggle_output
def_key "enter"
    play_item
    run_external_command "tmux refresh-client -S" # force update tmux statusbar
def_key "r"
    toggle_repeat
# }}}

# allowed defaults
# {{{
def_key "`"
    add_random_items
def_key "i"
    show_song_info
def_key "u"
    update_database
def_key "#"
    toggle_bitrate_visibility
# }}}

