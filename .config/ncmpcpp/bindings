# vim:foldenable:foldmethod=marker:foldlevel=0

# always return to playlist view before quitting
# {{{
def_key "q"
    show_playlist
    jump_to_playing_song
def_key "q"
    quit
def_key "Q"
    quit
# }}}

# custom arrangement of panes
# {{{
def_key "1"
    show_media_library
def_key "2"
    show_playlist_editor
def_key "3"
    show_playlist
    jump_to_playing_song
def_key "4"
    show_search_engine
def_key "5"
    show_visualizer
def_key "6"
    show_clock
def_key "7"
    show_clock
def_key "8"
    show_browser
def_key "9"
    show_outputs
def_key "0"
    show_server_info
def_key "ctrl-w"
    toggle_screen_lock
# }}}

